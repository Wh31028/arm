#include "ap.h"

extern uint32_t cdcAvailable(void);
extern uint8_t cdcRead(void);
extern void cdcDataIn(uint8_t rx_data);
extern uint32_t cdcWrite(uint8_t *p_data, uint32_t length);



void apInit(void)
{
	uartOpen(_DEF_UART1, 57600);     //USB      (통신속도가 바뀌어서 통신이 안되지는 않음)
	uartOpen(_DEF_UART2, 57600);     //UART			(통신속도가 바뀌면 그에 맞춰서 데이터를 보내줘야함)
}

void apMain(void)
{
	uint32_t pre_time;
	uint32_t rx_buf[128];
	uint32_t rx_len;


	pre_time = millis();
	while(1)
	{
		if(millis() - pre_time >= 500)
		{
			pre_time = millis();
			ledToggle(_DEF_LED1);

		}
		if(uartGetBaud(_DEF_UART1) != uartgetBaud(_DEF_UART2))
		{
			uartOpen(_DEF_UART2,uartGetBaud(_DEF_UART1));
		}

		// USB->UART
		rx_len = uartAvailable(_DEF_UART1);
		if(rx_len >128)
		{
			re_len = 128;
		}
		if(rx_len >0)
		{
			for(int i=0;i<rx_len;i++)
			{
				rx_buf[i] = uartRead(_DEF_UART1);
			}
			uartWrite(_DEF_UART2, rx_buf,rx_len);
		}

		// USB->UART
				rx_len = uartAvailable(_DEF_UART1);
				if(rx_len >128)
				{
					re_len = 128;
				}
				if(rx_len >0)
				{
					for(int i=0;i<rx_len;i++)
					{
						rx_buf[i] = uartRead(_DEF_UART1);
					}
					uartWrite(_DEF_UART2, rx_buf,rx_len);
				}


	}
}
